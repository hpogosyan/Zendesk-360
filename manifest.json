{
  "name": "Cornerstone 360",
  "author": {
    "name": "Cornerstone",
    "email": "support@cornerstoneist.com",
    "url": "https://www.cornerstoneist.com"
  },

  "defaultLocale": "en",
  "private": false,
  "singleInstall": true,
  "location": [ "new_ticket_sidebar", "ticket_sidebar" ],
  "frameworkVersion": "1.0",
  "version": "0.2.7",

  "domainWhitelist": [
    "cornerstone-360.herokuapp.com",
    "cornerstoneist.com",
    "1e395389321.b.passageway.io",
    "api.cornerstoneist.com",
    "cornerstone360.zendesk.com",
    "localhost"
    ],

  "parameters": [
    {
      "name": "parse_username",
      "type": "text",
      "required": true
    },
    {
      "name": "parse_password",
      "type": "password",
      "required": true
    },
    {
      "name": "time_field_id",
      "type": "hidden"
    },
    {
      "name": "total_time_field_id",
      "type": "hidden"
    },
    {
      "name": "display_timelogs",
      "type": "checkbox",
      "default": true
    },
    {
      "name": "auto_pause_resume",
      "type": "checkbox",
      "default": true
    },
    {
      "name": "manual_pause_resume",
      "type": "checkbox",
      "default": true
    },
    {
      "name": "reset",
      "type": "checkbox",
      "default": true
    },
    {
      "name": "time_submission",
      "type": "checkbox",
      "default": true
    },
    {
      "name": "simple_submission",
      "type": "checkbox",
      "default": true
    }
  ]
}
